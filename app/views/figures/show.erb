
<h1> <%= @figure.name %> </h1>

  <br/>

  <h3>Titles</h3>
  <% @figure.titles.each do |t| %>
    <div>
      <%=@figure.name%> is <%=t.name%>
    </div>
  <% end %>
  <br/>

  <br/>

  <h3>Landmarks</h3>
  <% @figure.landmarks.each do |l| %>
    <div>
      <%=l.name%>
    </div>
  <% end %>
  <br/>
<a href="/figures/<%= @figure.id %>/edit">Edit</a> 
