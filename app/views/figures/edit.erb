<form action="/figures/<%= @figure.id %>" method="post">
  <input type="hidden" name="_method" value="patch" />
  <label for="">Name</label>
  <input id="figure_name" type="text" name="figure[name]" value= "<%=@figure.name%>" />

  <br/>

  <h3>Titles</h3>
  <% @titles.each do |title| %>
    <div>
      <input type="checkbox" id="title_<%= title.id %>" name="figure[title_ids][]"
             value="<%= title.id %>"
             <% if @figure.title_ids.include?(title.id) %>checked <% end %>
             />
      <label for="title-<%= title.id %>"><%= title.name %></label>
    </div>
  <% end %>
  <br/>

  <h3>Create New Title</h3>
  <input id="new_title" type="text" name="title[name]" />

  <br/>

  <h3>Landmarks</h3>
  <% @landmarks.each do |landmark| %>
    <div>
      <input type="checkbox" id="landmark_<%= landmark.id %>" name="figure[landmark_ids][]"
             value="<%= landmark.id %>"
             <% if @figure.landmark_ids.include?(landmark.id) %>checked <% end %>
             />
      <label for="landmark-<%= landmark.id %>"><%= landmark.name %></label>
    </div>
  <% end %>
  <br/>

  <h3>Create New Landmark</h3>
  <label for="">Name:</label>
  <input id="new_landmark" type="text" name="landmark[name]" />
  <label for="">Year:</label>
  <input id="new_landmark_year" type="text" name="landmark[year_completed]" />

  <input type="submit" value="Edit Figure" />
</form>
